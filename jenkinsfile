pipeline{
    agent any
    tools {
        nodejs 'Nodejs22-6-0'
    }
    

    stages{
        stage('cheking  the npm and node version '){
            steps{
                sh '''
                    npm -v
                    node -v
                '''
            }
        }
        stage('Test'){
            steps{
                echo 'Testing the app'
            }
        }
        stage('Deploy'){
            steps{
                echo 'Deploying the app'
            }
        }
    }
}
